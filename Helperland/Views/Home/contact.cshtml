    <main class="container">
      <div class="text-center contact-list">
        <div class="contact-type" >
            <img class="img1" src="~/img/contact/forma-1_2.png" alt="">
            <p>1111 Lorem ipsum text 100,<br> Lorem ipsum AB</p>
        </div>
        <div class="contact-type" >
            <img class="img2" src="~/img/contact/phone-call.png" alt="">
