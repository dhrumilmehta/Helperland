</div>




<!-- Add address Modal -->
<div class="modal fade" id="addAddressModal" tabindex="-1" aria-labelledby="addAddressLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="addAddressLabel" style="font-weight:600">Add Address</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">

                <form class="addAddressForm" id="addAddressForm">
                    <div class="row mb-3">
                        <div class="col-md-6 col-sm-12">
                            <label for="addAddressLine1" class="form-label">Street name</label>
                            <input id="addAddressLine1" type="text" class="form-control" name="addAddressLine1" />

                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label for="addAddressLine2" class="form-label">House number</label>
                            <input id="addAddressLine2" type="text" class="form-control" name="AddressLine2" />

                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6 col-sm-12">
                            <label for="addAddressPostalCode" class="form-label">Postal Code</label>
                            <input id="addAddressPostalCode" type="text" class="form-control" name="PostalCode" />

                        </div>
                        <div class="col-md-6 col-sm-12">
                            <label for="addAddressCity" class="form-label">City</label>
                            <input id="addAddressCity" type="text" class="form-control" name="City" />

                        </div>
                    </div>
                    <div class="row mb-3">
                        <div class="col-md-6 col-sm-12">
                            <label for="addAddressMobile" class="form-label">Phone number</label>
                            <div class="input-group">
                                <div class="input-group-text">+91</div>
                                <input maxlength="10" id="addAddressMobile" type="text" class="form-control" name="Mobile" />

                            </div>
                        </div>
                    </div>


                </form>

            </div>
            <div class="modal-footer">
                <button type="submit" id="addAddresssave" class="btn-primary addAddresssave rounded-pill" style="padding: 5px 15px; border: none;">Save</button>
                <button type="reset" id="addAddresscancel" class="btn-light btn-outline-primary rounded-pill addAddresscancel" data-bs-dismiss="modal" style="padding: 5px 15px; border: none;">Cancel</button>
            </div>
        </div>
    </div>
</div>


