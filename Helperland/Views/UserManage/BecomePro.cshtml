@model Helperland.Models.User
@{
    ViewData["Title"] = "BecomePro";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
    <link rel="stylesheet" href="~/CSS/become_pro.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">
    <script src="https://www.google.com/recaptcha/api.js" async defer></script>



    <title>Become a Provider</title>
</head>

<body>
    <header>
        <!--Navigation Bar-->

        <nav class="navbar  navbar-expand-lg">
            <div class="container-fluid">
                <a class="navbar-brand" asp-action="Index">
                    <img src="~/Images/logo-large.png" alt="Helperland">
                </a>
                <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation" style="color: blanchedalmond;font-size:20px;">
                    <span class="navbar-toggler-icon">
                        <i class="fas fa-bars"></i>
                    </span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav  ms-auto  mb-lg-0 align-items-end">
                        <li class="nav-item button">
                            <a class="nav-link">
                                Book a
                                Cleaner
                            </a>
                        </li>
                        <li class="nav-item"><a asp-action="Prices" class="nav-link">Prices</a></li>
                        <li class="nav-item"><a class="nav-link">Our Guarantee</a></li>
                        <li class="nav-item"><a class="nav-link">Blog</a></li>
                        <li class="nav-item"><a asp-action="Contact" class="nav-link">Contact us</a></li>
                        <li class="nav-item login-button">
                            <a type="button" class="nav-link"
                               data-bs-target="#login-modal" data-bs-toggle="modal">Login</a>
                        </li>
                        <li class="nav-item button">
                            <a class="nav-link" asp-action="BecomePro">
                                Become a
                                Helper
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                <img style="vertical-align: baseline;" src="~/Images/ic-flag.png" alt="">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li>
                                    <a class="dropdown-item">
                                        <img src="~/Images/ic-flag.png" alt="">
                                        <span>India</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item">
                                        <img src="~/Images/ic-flag.png" alt="">
                                        <span>U.K.</span>
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item">
                                        <img src="~/Images/ic-flag.png" alt="">
                                        <span>U.S.A.</span>
                                    </a>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>



        <form class="container-fluid d-flex align-items-center justify-content-center flex-column" asp-action="BecomePro" asp-controller="UserManage" method="post">

            <h2 class="form-title text-center">Register Now!</h2>

            <input class="form-control" type="text" name="FirstName" id="fname" placeholder="First Name" asp-for="FirstName">
            <input class="form-control" type="text" name="LastName" id="lname" placeholder="Last Name" asp-for="LastName">
            <input class="form-control" type="email" name="Email" id="ProviderEmail"
                   placeholder="Email Address" asp-for="Email">

            <div class="input-group row">
                <input type="text" class="input-group-text col-2" id="country-code" placeholder="+91" disabled>
                <input type="tel" name="Mobile" id="phone" class="form-control col-10" placeholder="Phone Number"
                       aria-label="Phone Number" aria-describedby="basic-addon1" autocomplete="off" asp-for="Mobile">
            </div>

            <input class="form-control" type="password" name="Password" id="password" placeholder="Password" asp-for="Password">

            <input class="form-control" type="password" name="cnfrm-password" id="cnfrm-password"
                   placeholder="Confirm Password">

            <div class="form-check sendnews">
                <input type="checkbox" class="form-check-input" id="send-newsletter">
                <label class="form-check-label" for="send-newsletter">Send me newsletters from Helperland</label>
            </div>

            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="acceptTerms">
                <label class="form-check-label" for="acceptTerms">
                    I accept <a href="#">terms and conditions</a> & <a href="#">privacy policy</a>
                </label>
            </div>

            <div class="g-recaptcha" data-sitekey="6Leo894dAAAAACvzr987WLweqfnQEVhsecrSZEvA"></div>

            <button class="btn rounded-pill m-auto d-flex align-items-center justify-content-center" type="submit" value="Create">
                Get Started&nbsp;&nbsp;<img src="~/Images/arrow-white.png" alt="white_arrow">
            </button>
        </form>


        <div class="down-arrow">
            <a href="#news_letter"><img src="~/Images/group-18_5.png" alt="down-arrow"></a>
        </div>

    </header>



    <section class="how-it-works">

        <p class="work-header text-center">How it works</p>

        <div class="container-fluid d-flex align-items-center justify-content-center flex-column work-card-container">


            <div class="row align-items-center justify-content-center justify-content-md-between flex-wrap-reverse  work-card">
                <div class="work-card-body col-12  col-md-6">
                    <h3 class="work-card-header text-center text-md-start">Register Yourself</h3>
                    <p class="work-card-text text-center text-md-start">
                        Provide your basic information to register yourself as a service provider.
                    </p>
                    <a href="#" class="readmore d-flex align-items-center justify-content-center justify-content-md-start">
                        Read More
                        <img src="~/Images/shape-2-copy-3.png"
                             alt="">
                    </a>
                </div>
                <div class="d-flex align-items-center justify-content-center justify-content-md-end col-12  col-md-6 work-card-image wc-img1">
                    <img src="~/Images/register-your-self.png" alt="image1">
                </div>
            </div>


            <div class="row align-items-center justify-content-center justify-content-md-between work-card">
                <div class="
                            work-card-image wc-img
							d-flex
							align-items-center
							justify-content-center justify-content-md-start
							col-12  col-md-6
						">
                    <img src="~/Images/group-29.png" alt="image2">
                </div>
                <div class="work-card-body col-12  col-md-6">
                    <h3 class="work-card-header text-center text-md-start">Get service requests</h3>
                    <p class="work-card-text text-center text-md-start">
                        You will get service requests from customes depend on service area and profile.
                    </p>
                    <a href="#" class="readmore d-flex align-items-center justify-content-center justify-content-md-start">
                        Read More
                        <img src="~/Images/shape-2-copy-3.png"
                             alt="">
                    </a>
                </div>
            </div>


            <div class="row align-items-center justify-content-center justify-content-md-between flex-wrap-reverse  work-card">
                <div class="work-card-body col-12  col-md-6">
                    <h3 class="work-card-header text-center text-md-start">Register Yourself</h3>
                    <p class="work-card-text text-center text-md-start">
                        Provide your basic information to register yourself as a service provider.
                    </p>
                    <a href="#" class="readmore d-flex align-items-center justify-content-center justify-content-md-start">
                        Read More
                        <img src="~/Images/shape-2-copy-3.png"
                             alt="">
                    </a>
                </div>
                <div class="d-flex align-items-center justify-content-center justify-content-md-end col-12  col-md-6 work-card-image wc-img1">
                    <img src="~/Images/group-30.png" alt="image1">
                </div>
            </div>




        </div>



        <div class="container-fluid news_letter" id="news_letter">
            <p class="head_newsletter">GET OUR NEWSLETTER</p>
            <form action="#" method="post">
                <input class="newsetter" type="email" name="email" placeholder="YOUR EMAIL"> <input type="submit"
                                                                                                    class="btn-submit" name="submit" value="Submit">
            </form>
        </div>




    </section>












    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous"></script>

</body>


</html>
