@model Helperland.ViewModels.ScheduleService

@{
    ViewData["Title"] = "scheduleservice";
    String TodayDate = DateTime.Now.ToString("yyyy-MM-dd");
}


<div id="tab-content2" class="contents">

    <form id="form2">

        <div class="when-duration">
            <div class="when">
                <label for="when-input"> When do you need cleaner? </label>
                <div id="when-input" style="display:flex">

                    <div class="date-input input-group">
                        <!--span class="input-group-text" id="basic-addon1">
                            <img src="~/Images/admin-calendar-blue.png" alt="calender">
                         </span-->
                        <input type="date" id="date" class="form-control" aria-label="Date" aria-describedby="basic-addon1" asp-for="Date" min=@TodayDate value=@TodayDate>
                    </div>
                    <input type="time" class="time-input" asp-for="Time" id="Time">

                </div>
            </div>

            <div class="timeduration">
                <label for="timeduration-input"> How long do you need the cleaner for? </label>
                <br>
                <select id="timeduration-input" asp-for="Duration">
                    <option selected value="3">3.0 Hrs</option>
                    <option value="3.5">3.5 Hrs</option>
                    <option value="4">4.0 Hrs</option>
                    <option value="4.5">4.5 Hrs</option>
                    <option value="5">5.0 Hrs</option>
                    <option value="5.5">5.5 hrs</option>
                    <option value="6">6.0 hrs</option>
                    <option value="6.5">6.5 hrs</option>
                    <option value="7">7.0 hrs</option>
                    <option value="7.5">7.5 hrs</option>
                    <option value="8">8.0 hrs</option>
                </select>
            </div>

        </div>

        <div class="extraService-checkbox">
            <p class="service-head">Extra services</p>
            <div id="custom-checkboxes">
                <div class="checkbox">
                    <input type="checkbox" id="insideCabinetCheck" class="htmlcheckbox" asp-for="extra.Cabinet">
