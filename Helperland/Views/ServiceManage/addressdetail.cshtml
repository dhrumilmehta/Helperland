@model Helperland.ViewModels.Address

@{
    ViewData["Title"] = "addressdetail";
}

<div id="tab-content3" class="contents">

    <form id="form3">

        <div id="address">
            <!--p class="details-text">Enter your details, so that we can serve you in better way!<p-->
            

        </div>
        
        <button type="button" class="btn rounded-pill add-address" id="addAddressBtn" onclick="addAddressdiv()">
            <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-plus" viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z" />
            </svg>
            Add New Address
        </button>


        <div id="addNewaddressDiv" class="container-fluid">

            <form class="address_form" id="addressForm">
                <div class="row mb-3">
                    <div class="col-md-6 col-sm-12">
                        <label for="streetname" class="form-label">Street name</label>
                        <input asp-for="AddressLine1" type="text" class="form-control" placeholder="Street name" name="AddressLine1"/>
                        
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label for="housenumber" class="form-label">House number</label>
                        <input asp-for="AddressLine2" type="text" class="form-control" placeholder="House number & name" name="AddressLine2"/>
                        
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6 col-sm-12">
                        <label for="postalcode" class="form-label">Postal Code</label>
                        <input asp-for="PostalCode" id="addAddressPostalCode" type="text" class="form-control" placeholder="Postal Code" name="PostalCode" disabled/>
                        
                    </div>
                    <div class="col-md-6 col-sm-12">
                        <label for="city" class="form-label">City</label>
                        <input asp-for="City" type="text" class="form-control" placeholder="City" name="City"/>
                       
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-6 col-sm-12">
                        <label for="phonenumber" class="form-label">Phone number</label>
                        <div class="input-group">
                            <div class="input-group-text">+91</div>
                            <input asp-for="Mobile" type="text" class="form-control" placeholder="Mobile Number" name="Mobile"/>
                            
                        </div>
                    </div>
                </div>

                <div>
                    <button type="button" class="btn save rounded-pill" onclick='saveAddress()'>Save</button>
                    <button id="addressCancelBtn" type="reset" class="btn rounded-pill cancel" onclick='cancelAddress()'>Cancel</button>
                </div>
            </form>
        </div>
        <hr />

        <input id="AddContbtn" type="button" value="Continue" class="btn rounded-pill continue cont-2" onclick="SaveAddressForm();">


    </form>

</div>

