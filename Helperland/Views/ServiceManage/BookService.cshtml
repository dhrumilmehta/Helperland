@{
    ViewData["Title"] = "bookservice";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

    <link rel="stylesheet" href="~/css/book.css">

    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto&display=swap" rel="stylesheet">

    <script src="~/js/book.js" defer></script>

    <link rel="stylesheet" href="//code.jquery.com/ui/1.13.0/themes/base/jquery-ui.css">
    <script src="https://code.jquery.com/jquery-3.6.0.js" defer></script>
    <script src="https://code.jquery.com/ui/1.13.0/jquery-ui.js" defer></script>

    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.3/jquery.validate.min.js" integrity="sha512-37T7leoNS06R80c8Ulq7cdCDU5MNQBwlYoy1TX/WUsLFC2eYNqtKlV0QjH7r8JpG/S0GUMZwebnVFLPd6SU5yg==" crossorigin="anonymous" referrerpolicy="no-referrer" defer></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js" integrity="sha512-o6XqxgrUsKmchwy9G5VRNWSSxTS4Urr4loO6/0hYdpWmFUfHqGzawGxeQGMDqYzxjY9sbktPbNlkIQJWagVZQg==" crossorigin="anonymous" referrerpolicy="no-referrer" defer></script>

    <title>Book Service</title>

</head>

<body>


    <!--Navigation Bar-->
    <nav class="navbar  navbar-expand-lg ">
        <div class="container-fluid">
            <a class="navbar-brand" asp-action="Index" asp-controller="Home">
                <img src="~/Images/logo-large.png" alt="Helperland">
            </a>
            <button class="navbar-toggler navbar-dark" type="button" data-bs-toggle="collapse"
                    data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                    aria-label="Toggle navigation" style="color: #81b6c1;font-size:20px;">
                <span class="navbar-toggler-icon">
                    <i class="fas fa-bars"></i>
                </span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav  ms-auto  mb-lg-0 align-items-end">
                    <li class="nav-item nav-btn-itmes">
                        <a class="btn rounded-pill nav-btn" type="button" hidden>Book Now</a>
                    </li>
                    <li class="nav-item nav-btn-itmes">
                        <a class="btn rounded-pill nav-btn price-btn" asp-action="Prices" asp-controller="Home" type="button">
                            Prices & services
                        </a>
                    </li>
                    <li class="nav-item nav-link-items"><a class="nav-link" href="#">Warranty</a></li>
                    <li class="nav-item nav-link-items"><a class="nav-link" href="#">Blog</a></li>
                    <li class="nav-item nav-link-items"><a class="nav-link" asp-action="Contact" asp-controller="Home">Contact</a></li>
                    <li class="nav-item nav-btn-itmes">
                        <a class="btn rounded-pill nav-btn" type="button" asp-action="Logout" asp-controller="UserManage">Log-Out</a>
                    </li>
                    <li class="nav-item nav-btn-itmes">
                        <a class="btn rounded-pill nav-btn" type="button" asp-action="BecomePro" asp-controller="UserManage">Become a Helper</a>
                    </li>

                </ul>
            </div>
        </div>
    </nav>

    <div class="header_banner">
        <img src="~/Images/book-service-banner.jpg" alt="banner">
    </div>

    <div class="setup-heading">
        <p>Set up your cleaning service</p>
    </div>


    <div class="container-fluid sep_contain">
        <hr class="sep_hr" width="62px" height="1px">
        <img class="separator" src="~/Images/separator.png" alt="">
        <hr class="sep_hr" width="62px" height="1px">
    </div>


    <div class="hero">
        <div class="setup-left">
            <div class="btn-box">
                <ul>
                    
                    <li class="tabs active" id="tab1">
                        <a type="button" onclick="Tab1Click()">
                            <img src="~/Images/setup-service.png" alt="setupService" id="img1">
                            Setup Service
                        </a>
                    </li>
                    <li class="tabs" id="tab2">
                        <a type="button" onclick="Tab2Click()">
                            <img src="~/Images/schedule.png" alt="schedule" id="img2">
                            Schedule & Plan
                        </a>
                    </li>
                    <li class="tabs" id="tab3">
                        <a type="button" onclick="Tab3Click()">
                            <img src="~/Images/details.png" alt="details" id="img3">
                            Your Details
                        </a>
                    </li>
                    <li class="tabs" id="tab4">
                        <a type="button" onclick="Tab4Click()">
                            <img src="~/Images/payment.png" alt="make payment" id="img4">
                            Make Payment
                        </a>
                    </li>

                </ul>
            </div>
            <div id="tab-content">

                @await Html.PartialAsync("setupservice")

                @await Html.PartialAsync("scheduleservice")

                @await Html.PartialAsync("addressdetail")

                @await Html.PartialAsync("completebooking")
                
            </div>
        </div>


        <div class="setup-right">
            <div class="price-card">
                <h3>Payment Summary</h3>
                <div class="details">

                    <p style="display:flex"><span id="date-detail"> </span>&nbsp;&nbsp;<span style="display:none" id="at">at</span>&nbsp;&nbsp;<span id="time-detail"> </span></p>
                    
                </div>

                <div class="duration">
                    <h4>Duration</h4>


                    <p style="display: flex;justify-content: space-between;">Basic <span style="text-align: right;"><span id="basicTime" style="display:inline-block">3</span>Hrs&nbsp;</span></p>


                    <div id="extraduration1" class="extraduration"><p style="display: flex;justify-content: space-between;">Inside Cabinet <span style="text-align: right;">30 Mins &nbsp;</span></p></div>
                    <div id="extraduration2" class="extraduration"><p style="display: flex;justify-content: space-between;">Inside Fridge <span style="text-align: right;">30 Mins &nbsp;</span></p></div>
                    <div id="extraduration3" class="extraduration"><p style="display: flex;justify-content: space-between;">Inside Oven <span style="text-align: right;">30 Mins &nbsp;</span></p></div>
                    <div id="extraduration4" class="extraduration"><p style="display: flex;justify-content: space-between;">Laundry <span style="text-align: right;">30 Mins &nbsp;</span></p></div>
                    <div id="extraduration5" class="extraduration"><p style="display: flex;justify-content: space-between;">Interior Windows <span style="text-align: right;">30 Mins &nbsp;</span></p></div>

                </div>

                    <div class="cover">
                        <div class="totalhour">
                            <span><strong>Total Service Time</strong></span>
                            <span><strong class="hourval">3.0 Hrs</strong></span>
                        </div>
                    </div>
                    <div class="cover">
                        <div class="pay-list">
                            <p>Per cleaning </p>
                            <p style="text-align: right">
                                <strong class="perClean-cost">$25</strong><span></span>
                            </p>
                        </div>
                    </div>
                    <div class="pay-list totalPay">
                        <p>
                            <span style="color: #1d7a8c; font-size: 20px; padding-bottom: 11px">Total Payment</span>
                            <span>Effective Price</span>
                        </p>
                        <p style="text-align: right">
                            <strong style="color: #1d7a8c; font-size: 28px" class="total_cost">$75</strong>
                            <span><strong class="total_cost">$25</strong></span>
                        </p>
                    </div>
                    <p class="condition">
                        <span style="color: red">*</span>You will save 20% according to
                        §35a EStG.
                    </p>

                    <div class="seeWhatInclude">
                        <a href="#"><img style="width: 20px;height:20px" src="~/Images/smiley.png" alt="smile"><span style="color: #1D7A8C">&nbsp;See what is always included</span></a>
                    </div>
                </div>

                <h3 class="question ">Questions?</h3>

                <div class="accordion" id="accordionQuestion">
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingOne">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
                                Lorem Lorem ipsum dolor sit amet imperdiet?
                            </button>
                        </h2>
                        <div id="collapseOne" class="accordion-collapse collapse" aria-labelledby="headingOne" data-bs-parent="#accordionQuestion">
                            <div class="accordion-body">
                                <strong>This is the first item's accordion body.</strong> It is shown by default, until the collapse plugin adds the appropriate classes that we use to style each element.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingTwo">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
                                Lorem Lorem ipsum dolor sit amet imperdiet?
                            </button>
                        </h2>
                        <div id="collapseTwo" class="accordion-collapse collapse" aria-labelledby="headingTwo" data-bs-parent="#accordionQuestion">
                            <div class="accordion-body">
                                <strong>This is the second item's accordion body.</strong> It is hidden by default, until the collapse plugin adds the appropriate classes that we use to style each element.
                            </div>
                        </div>
                    </div>
                    <div class="accordion-item">
                        <h2 class="accordion-header" id="headingThree">
                            <button class="accordion-button collapsed" type="button" data-bs-toggle="collapse" data-bs-target="#collapseThree" aria-expanded="false" aria-controls="collapseThree">
                                Lorem Lorem ipsum dolor sit amet imperdiet?
                            </button>
                        </h2>
                        <div id="collapseThree" class="accordion-collapse collapse" aria-labelledby="headingThree" data-bs-parent="#accordionQuestion">
                            <div class="accordion-body">
                                <strong>This is the third item's accordion body.</strong> It is hidden by default, until the collapse plugin adds the appropriate classes that we use to style each element.
                            </div>
                        </div>
                    </div>
                </div>

                <div class="furtherHelp"><a class="more-help" href="">For more help</a></div>
            </div>

    </div>



    <div class="container-fluid news_letter">
        <p class="head_newsletter">GET OUR NEWSLETTER</p>
        <form action="#" method="post">
            <input class="newsetter" type="email" name="email" placeholder="YOUR EMAIL"> <input type="submit"
                                                                                                class="btn-submit" name="submit" value="Submit">
        </form>
    </div>



    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
            crossorigin="anonymous">
    </script>


</body>

</html>